// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Machine {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  records   Record[]
  numbers   MachineNumber[]
}

model MachineNumber {
  id        String   @id @default(cuid())
  machineId String
  machine   Machine  @relation(fields: [machineId], references: [id], onDelete: Cascade)
  machineNo Int
  
  @@unique([machineId, machineNo])
  @@index([machineId])
}

model Record {
  id        String   @id @default(cuid())
  date      DateTime
  machineId String
  machine   Machine  @relation(fields: [machineId], references: [id])
  machineNo Int
  diff      Int
  big       Int?      @default(0) // BIG回数
  games     Int?      @default(0) // 累計ゲーム数
  reg       Int?      @default(0) // REG(初当たり)回数
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date, machineId, machineNo])
  @@index([date])
  @@index([machineId])
}

// イベント日管理テーブル
// 将来の拡張: イベント種別、対象機種との紐付け等
model EventDay {
  id        String   @id @default(cuid())
  date      DateTime @unique
  label     String   @default("イベント") // イベント種別（将来拡張用）
  note      String?  // メモ（任意）
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
